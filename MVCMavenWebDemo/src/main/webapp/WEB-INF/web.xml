<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	
    <display-name>MVCMavenWebDemo</display-name>
    
     <context-param>  
    <param-name>log4j-config-location</param-name>  
    <param-value>/WEB-INF/log4j.properties</param-value>  
  </context-param>  
  
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
    	<description>
    	</description>
    	<display-name>IdFilter</display-name>
    	<filter-name>IdFilter</filter-name>
    	<filter-class>com.web.MVCMavenWebDemo.IdFilter</filter-class>
    </filter>
    <filter>
    	<description>
    	</description>
    	<display-name>NameFilter</display-name>
    	<filter-name>NameFilter</filter-name>
    	<filter-class>com.web.MVCMavenWebDemo.NameFilter</filter-class>
    </filter>
    <filter-mapping>
    	<filter-name>IdFilter</filter-name>
    	<url-pattern>/</url-pattern>
    </filter-mapping>
    <filter-mapping>
    	<filter-name>NameFilter</filter-name>
    	<url-pattern>/insert</url-pattern>
    </filter-mapping>
   	<filter-mapping>
    	<filter-name>NameFilter</filter-name>
    	<url-pattern>/update</url-pattern>
    </filter-mapping>     
    <servlet>  
  		<servlet-name>s1</servlet-name>  
  		<servlet-class>com.web.MVCMavenWebDemo.controller.ControllerServlet</servlet-class>  
  	</servlet>  
  	<servlet-mapping>  
  		<servlet-name>s1</servlet-name>  
  		<url-pattern>/</url-pattern>  
 	</servlet-mapping>
 	
 	        
   </web-app>
